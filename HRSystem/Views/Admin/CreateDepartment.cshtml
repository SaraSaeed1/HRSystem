@model HRSystem.Entity.Department
@{
    ViewBag.Title = "CreateDepartment";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<nav class="d-flex justify-content-between m-4 p-1">
    <div class="d-flex">
        <h4 class="mt-3 mb-3">@Html.ActionLink("Department", "AllDepartment", "Admin") / </h4>
        <a href="/Admin/CreateDepartment"><h4 class="font-weight-bolder mt-3 mb-3 text-primary"> Add New Department </h4></a>

    </div>
</nav>

<main class="main-content">
    <div class="page-header align-items-start min-vh-75 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('../../Content/assets/img/curved-images/curved-10.jpg');">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container mt-8">
            <div class="col-8 mx-auto">
                <div class="card z-index-0">
                    <div class="card-header text-center pt-4">
                        <h5>Add new </h5>
                        <label class="text-danger mt-3">@ViewBag.error</label>
                        <label class="text-success mt-3">@ViewBag.good</label>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <br />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-outline form-white mb-4">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label" })
                                <div class="col">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-lg", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row d-flex justify-content-evenly">
                                <a href="/Admin/AllDepartment" class="btn btn-outline-primary  w-40 my-4 mb-2"> Cancel</a>
                                <button type="submit" class=" btn btn-outline-info w-40 my-4 mb-2">Create</button>
                                @*<button type="submit" class=" btn bg-gradient-faded-info-vertical w-40 my-4 mb-2">Cancel</button>*@
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>